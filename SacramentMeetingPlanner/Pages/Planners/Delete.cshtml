@page
@model SacramentMeetingPlanner.Pages.Planners.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 id="createNewHeader">Delete</h1>
<h3 id="confirm">Are you sure you want to delete this?</h3>
<div id="deleteForm">
    <form method="post">
        <input type="hidden" asp-for="Planner.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
<div class="row">
    <div class="plannerContainer">
        <div class="createHeader">
            <p id="createTitle">Lake Fork Ward</p>
        </div>
        <div class="row">
            <div class="displayRow">
                <p id="date" class="displayValue">
                    @Html.DisplayFor(model => model.Planner.Date)
                </p>
            </div>
            <div class="displayRow">
                <p class="displayName">
                    President......................................................
                </p>
                <p class="displayValue">
                    @Html.DisplayFor(model => model.Planner.Leader)
                </p>
            </div>
            <div class="displayRow">
                <p class="displayName">
                    Conducting.................................................
                </p>
                <p class="displayValue">
                    Nate Ricks
                </p>
            </div>
            <div class="displayRow">
                <p class="displayName">
                    Opening Hymn.........................................
                </p>
                <p class="displayValue">
                    "@Html.DisplayFor(model => model.Planner.OpeningSong)"
