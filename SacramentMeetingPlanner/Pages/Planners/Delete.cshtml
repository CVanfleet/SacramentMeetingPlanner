                    @Html.DisplayNameFor(model => model.Planner.MusicalNumber)
                </p>
                <p id="musicValue" class="displayValue">
                    "@Html.DisplayFor(model => model.Planner.MusicalNumber)"
                </p>
            </div>
            <div id="speaker3Div" class="displayRow">
                <p class="displayName">
                    Speaker...........................................................
                </p>
