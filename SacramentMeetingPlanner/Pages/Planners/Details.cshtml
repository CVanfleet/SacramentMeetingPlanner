@page
@model SacramentMeetingPlanner.Pages.Planners.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 id="createNewHeader">Details</h1>
<div>
    <a class="back" asp-page="Index">Back to List</a>
    <a class="edit" asp-page="./Edit" asp-route-id="@Model.Planner?.ID">Edit</a>
</div>

<div class="row">
    <div class="plannerContainer">
        <div class="createHeader">
            <p id="createTitle">Lake Fork Ward</p>
        </div>
        <div class="row">
            <div class="displayRow">
                <p id="date" class="displayValue">
                    @Html.DisplayFor(model => model.Planner.Date)
                </p>
            </div>
            <div class="displayRow">
                <p class="displayName">
                    President......................................................
                </p>
                <p class="displayValue">
                    @Html.DisplayFor(model => model.Planner.Leader)
                </p>
            </div>
            <div class="displayRow">
                <p class="displayName">
                    Conducting.................................................
                </p>
                <p class="displayValue">
                    Nate Ricks
                </p>
            </div>
            <div class="displayRow">
                <p class="displayName">
                    Opening Hymn.........................................
                </p>
                <p class="displayValue">
                    "@Html.DisplayFor(model => model.Planner.OpeningSong)"
                </p>
            </div>
            <div class="displayRow">
                <p class="displayName">
                    Invocation...................................................
                </p>
                <p class="displayValue">
                    @Html.DisplayFor(model => model.Planner.OpeningPrayer)
                </p>
            </div>
            <div class="informationWrapper">
                <p class="informationText">Ward Business</p>
            </div>
            <div class="displayRow">
                <p class="displayName">
                    Sacrament Hymn.........................................
                </p>
                <p class="displayValue">
                    "@Html.DisplayFor(model => model.Planner.SacramentHymn)"
                </p>
            </div>
            <div class="informationWrapper">
                <p class="informationText">Passing of the Sacrament by the Aaronic Priesthood</p>
            </div>
            <div class="displayRow">
                <p class="displayName">
                    Speaker Subject(s).......................................
                </p>
                <p class="displayValue">
                    @Html.DisplayFor(model => model.Planner.Subject)
                </p>
            </div>
            <div class="displayRow">
                <p class="displayName">
                    Speaker...........................................................
                </p>
                <p class="displayValue">
                    @Html.DisplayFor(model => model.Planner.Speaker1)
                </p>
            </div>
            <div id="speaker2Div" class="displayRow">
                <p class="displayName">
                    Speaker...........................................................
                </p>
                <p id="speaker2" class="displayValue">
                    @Html.DisplayFor(model => model.Planner.Speaker2)
                </p>
            </div>
            <div id="musicValueDiv" class="displayRow">
                <p id="musicName" class="displayName">
                    @Html.DisplayNameFor(model => model.Planner.MusicalNumber)
                </p>
                <p id="musicValue" class="displayValue">
                    "@Html.DisplayFor(model => model.Planner.MusicalNumber)"
                </p>
            </div>
            <div id="speaker3Div" class="displayRow">
                <p class="displayName">
                    Speaker...........................................................
                </p>
                <p id="speaker3" class="displayValue">
                    @Html.DisplayFor(model => model.Planner.Speaker3)
                </p>
            </div>
            <div id="speaker4Div" class="displayRow">
                <p class="displayName">
                    Speaker...........................................................
                </p>
                <p id="speaker4" class="displayValue">
                    @Html.DisplayFor(model => model.Planner.Speaker4)
                </p>
            </div>
            <div class="displayRow">
                <p class="displayName">
                    Closing Hymn..............................................
                </p>
                <p class="displayValue">
                    "@Html.DisplayFor(model => model.Planner.ClosingSong)"
                </p>
            </div>
            <div class="displayRow">
                <p class="displayName">
                    Benediction...................................................
                </p>
                <p class="displayValue">
                    @Html.DisplayFor(model => model.Planner.ClosingPrayer)
                </p>
            </div>
        </div>
    </div>
</div>
